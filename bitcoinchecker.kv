#:kivy 1.10.1
<MainWindow>:
    price_text: bitcoin_price_text
    button: main_button
    GridLayout:
        cols: 1
        rows: 3
        width: root.width
        height: root.height
        Label:
            text: "Bitcoin Price"
            font_size: "44sp"
        Label:
            id: bitcoin_price_text
            text: "$N/A"
            font_size: "44sp"

        Button:
            id: main_button
            text: "Check price now"
            on_release: root.update_price_text()
            font_size: "32sp"